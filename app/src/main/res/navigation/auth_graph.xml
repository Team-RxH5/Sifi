<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/sign_up_fragment">

    <fragment
        android:id="@+id/sign_up_fragment"
        android:name="com.anagramsoftware.sifi.ui.auth.signup.SignUpFragment"
        android:label="fragmentSignUp"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_sign_up_fragment_to_create_user_fragment"
            app:destination="@id/create_user_fragment" />
    </fragment>
    <fragment
        android:id="@+id/create_user_fragment"
        android:name="com.anagramsoftware.sifi.ui.auth.createuser.CreateUserFragment"
        android:label="fragment_create_user"
        tools:layout="@layout/fragment_create_user" />
    <activity
        android:id="@+id/main_activity"
        android:name="com.anagramsoftware.sifi.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>